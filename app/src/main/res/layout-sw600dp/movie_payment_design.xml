<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <RelativeLayout
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:background="@drawable/icon_bg">

            <TextView
                android:id="@+id/watch_now_txt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="WATCH NOW"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:gravity="center"
                android:background="@drawable/icon_bgtab"
                />

            <ImageView
                android:layout_below="@+id/watch_now_txt"
                android:id="@+id/movie_payment_imageview"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"
                android:padding="20dp"
                android:scaleType="centerInside"
                />

        </RelativeLayout>




    </RelativeLayout>

    <TextView
        android:id="@+id/movie_payment_textview"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="$0.00"
        android:background="@color/app_cost_bg"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="125dp"
        android:layout_height="wrap_content" />
</LinearLayout>