<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bg2"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:gravity="center_horizontal"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/select_logo"
        android:id="@+id/imageView11"
        android:layout_centerInParent="true"
        android:layout_above="@+id/main"
        android:layout_margin="36dp"/>
    <ScrollView
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_height="wrap_content">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="20dp"
            android:gravity="center">
            <View
                android:id="@+id/register_cast_left"

                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/text_blue"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/layout_movie_cast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:id="@+id/register_cast_top"

                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/text_blue"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/register_title"
                    android:textSize="@dimen/login_texts"
                    android:textColor="@color/white"
                    android:layout_margin="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:id="@+id/register_textView"/>

                <View

                    android:id="@+id/register_cast_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:visibility="gone"
                    android:background="@color/text_blue" />
            </LinearLayout>

            <View
                android:id="@+id/movie_genre_left"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/text_blue"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/layout_movie_genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:id="@+id/reedem_top"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/text_blue"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reedem"
                    android:textSize="@dimen/login_texts"
                    android:textColor="@color/text_blue"
                    android:layout_margin="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"

                    android:id="@+id/reedem_textView"/>

                <View

                    android:id="@+id/reedem_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/text_blue" />
            </LinearLayout>

            <View
                android:id="@+id/reedem_right"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/text_blue"
                android:visibility="gone" />

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/register_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">
            <EditText
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:textColor="@color/white"
                android:hint="@string/register_username"
                android:textColorHint="@color/white"
                android:layout_marginBottom="20dp"
                android:textSize="@dimen/login_texts"
                android:background="@color/login_text_bg"
                android:id="@+id/username_editText" />
            <EditText
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:textColor="@color/white"
                android:hint="@string/register_password"
                android:textColorHint="@color/white"
                android:layout_marginBottom="20dp"
                android:textSize="@dimen/login_texts"
                android:background="@color/login_text_bg"
                android:id="@+id/pswd_editText" />
            <EditText
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:textColor="@color/white"
                android:hint="@string/register_confirm_password"
                android:textColorHint="@color/white"
                android:layout_marginBottom="20dp"
                android:textSize="@dimen/login_texts"
                android:background="@color/login_text_bg"
                android:id="@+id/confirm_pswd_editText" />
            <EditText
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:ems="10"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:textColor="@color/white"
                android:hint="@string/register_postal_code"
                android:textColorHint="@color/white"
                android:layout_marginBottom="20dp"
                android:textSize="@dimen/login_texts"
                android:background="@color/login_text_bg"
                android:id="@+id/postal_code_editText" />

            <LinearLayout
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1">

                    <RadioButton
                        android:id="@+id/ui_register_btn_male"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:gravity="center_vertical"
                        android:text="Male"
                        android:textColor="@color/white"
                        android:buttonTint="@color/text_lite_blue"
                        android:textSize="@dimen/login_texts"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1">

                    <RadioButton
                        android:id="@+id/ui_register_btn_female"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="Female"
                        android:buttonTint="@color/text_lite_blue"
                        android:textColor="@color/white"
                        android:textSize="@dimen/login_texts"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/ui_register_lab_range"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/login_texts"
                    android:text="Your age range"
                    />

                <Spinner
                    android:id="@+id/spinnerAge"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/login_texts"
                    android:background="@drawable/spinner_background"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="By clicking 'Create Account', you agree to the"
                    android:textSize="@dimen/login_forgot_text"
                    android:textColor="@color/white"
                    >

                </TextView>

                <TextView
                    android:id="@+id/txtTerm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Terms of Use"
                    android:textStyle="bold"
                    android:textSize="@dimen/login_forgot_text"
                    android:textColor="@color/text_lite_blue"
                    >

                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="and "
                    android:textSize="@dimen/login_forgot_text"
                    android:textColor="@color/white"
                    >

                </TextView>

                <TextView
                    android:id="@+id/txtPolicy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Privacy Policy"
                    android:textStyle="bold"
                    android:textSize="@dimen/login_forgot_text"
                    android:textColor="@color/text_lite_blue"
                    >

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/login_forgot_text"
                    android:text=", and to receive member notifications."
                    android:textColor="@color/white"
                    >

                </TextView>
            </LinearLayout>



            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Account"
                android:textColor="@color/white"
                android:layout_marginBottom="5dp"
                android:textSize="@dimen/login_texts"
                android:background="@drawable/menu_bg"
                android:layout_marginTop="20dp"
                android:id="@+id/create_button" />


        </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/reedem_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Just Activate &amp; Watch!"
                    android:textSize="@dimen/login_texts"
                    android:textColor="@color/white"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/textView5" />
                <EditText
                    android:layout_width="500dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberSigned"
                    android:ems="10"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:paddingLeft="16dp"
                    android:singleLine="true"
                    android:imeOptions="actionDone"
                    android:textColor="@color/white"
                    android:hint="Enter Your Code Here"
                    android:textColorHint="@color/text_blue"
                    android:layout_marginBottom="20dp"
                    android:textSize="@dimen/login_texts"
                    android:background="@color/login_text_bg"
                    android:id="@+id/reedem_code_editText" />

                <Button
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Activate"
                    android:background="@drawable/menu_bg"/>
            </LinearLayout>

        </RelativeLayout>



    </LinearLayout>
    </ScrollView>



</LinearLayout>
