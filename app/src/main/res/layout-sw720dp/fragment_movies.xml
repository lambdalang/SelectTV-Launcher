<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.selecttvlauncher.ui.fragments.FragmentMoviesLeftContent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:tint="@color/white"
            android:id="@+id/fragment_movie_left_prev_iconn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/prev" />

        <LinearLayout
            android:id="@+id/trailer_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:orientation="vertical">

            <com.selecttvlauncher.ui.views.DynamicImageView
                android:id="@+id/banner_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@color/black"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/trailer_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/movies_button_bg"
                android:gravity="center"
                android:minHeight="56dp"
                android:text="Watch Trailer #1"
                android:textColor="@color/white"
                android:visibility="gone"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/trailer_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/movies_button_bg"
                android:gravity="center"
                android:minHeight="56dp"
                android:text="Watch Trailer #2"
                android:textColor="@color/white"
                android:visibility="gone"
                android:textSize="20sp" />

        </LinearLayout>


    </LinearLayout>

</FrameLayout>
