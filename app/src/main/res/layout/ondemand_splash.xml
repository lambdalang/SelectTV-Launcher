<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ui.activities.MainActivity"
    android:background="@drawable/pop_bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Video On-Demand"
        android:id="@+id/textCategory"
        android:layout_gravity="center"
        android:textAllCaps="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="12dp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You have requested to watch"
        android:id="@+id/textView2"
        android:layout_below="@+id/textCategory"
        android:layout_centerHorizontal="true"
        android:textSize="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"/>

    <com.selecttvlauncher.ui.views.DynamicImageView
        android:layout_width="200dip"
        android:layout_height="120dip"
        android:id="@+id/imageShowThumbnail"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <TextView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="VideoTitle"
        android:id="@+id/textVideoTitle"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageShowThumbnail"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:maxLines="1" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textVideoTitle"
        android:layout_marginTop="10dp"
        android:weightSum="1"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="30dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Watch Now!"
            android:id="@+id/butWatch"
            android:layout_weight="0.5"

            android:background="@drawable/watch_free"
            android:textColor="@color/white" />

        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Cancel"
            android:id="@+id/butCancel"
            android:layout_weight="0.5"

            android:background="@drawable/favoursite"
            android:textColor="@color/white" />
    </LinearLayout>

    </RelativeLayout>

</LinearLayout>
