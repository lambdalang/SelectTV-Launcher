<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/activity_homescreen_grid_layout"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/list_bg_top"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/activity_homescreen_grid_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ondemand" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_bg_bottom"
        android:gravity="center">

        <TextView
            android:id="@+id/activity_homescreen_grid_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="On-Demand"
            android:textSize="15sp"
            android:textColor="@color/white" />
    </LinearLayout>
        </LinearLayout>
</LinearLayout>