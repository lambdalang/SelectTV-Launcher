<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/layout_toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bottom_grid_gray_color"
        android:gravity="center"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginStart="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/activity_homescreen_toolbar_app_logo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/activity_homescreen_toolbar_ondemand_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:gravity="center"
            android:text="On-Demand"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/activity_homescreen_toolbar_divider"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:tint="@color/white"
            android:background="@drawable/divider" />

        <TextView
            android:id="@+id/activity_homescreen_toolbar_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:gravity="center"
            android:text="@string/activity_homescreen_string_home"
            android:textColor="@color/white"
            android:textSize="20sp" />
        <ImageView
            android:visibility="gone"
            android:id="@+id/activity_homescreen_maincontent_divider"
            android:layout_margin="16dp"
            android:layout_gravity="center"
            android:layout_width="2dp"
            android:tint="@color/white"
            android:layout_height="wrap_content"
            android:background="@drawable/divider" />

        <TextView
            android:visibility="gone"
            android:id="@+id/activity_homescreen_toolbar_maincontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/activity_homescreen_string_home"
            android:layout_margin="16dp"
            android:textColor="@color/white"
            android:textSize="20sp" />
        <ImageView
            android:visibility="gone"
            android:id="@+id/activity_channel_final_list_divider"

            android:layout_margin="16dp"
            android:tint="@color/white"

            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/divider" />

        <TextView
            android:visibility="gone"
            android:id="@+id/activity_channel_final_list_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/activity_homescreen_string_home"
            android:layout_margin="16dp"
            android:textColor="@color/white"
            android:textSize="28sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center|end">

            <ImageView
                android:tint="@color/white"
                android:id="@+id/activity_homescreen_toolbar_fullview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:visibility="gone"
                android:src="@drawable/ic_resize" />

            <ImageView
                android:tint="@color/white"
                android:id="@+id/activity_homescreen_toolbar_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/search" />

            <ImageView
                android:tint="@color/white"
                android:id="@+id/activity_homescreen_toolbar_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/mail" />

            <ImageView
                android:tint="@color/white"
                android:id="@+id/activity_homescreen_toolbar_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/info"
                android:visibility="gone" />

            <ImageView
                android:tint="@color/white"
                android:id="@+id/activity_homescreen_toolbar_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/home"
                android:visibility="gone" />
            <ImageView
                android:tint="@color/white"
                android:id="@+id/activity_homescreen_toolbar_appmanager"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/cal_android" />
            <ImageView
                android:tint="@color/white"
                android:id="@+id/activity_homescreen_toolbar_logout"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/logout" />
            <android.support.v7.app.MediaRouteButton
                android:id="@+id/activity_homescreen_chromecast"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                />
            <ImageView
                android:id="@+id/activity_homescreen_toolbar_exit"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/close1_icon" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

</LinearLayout>